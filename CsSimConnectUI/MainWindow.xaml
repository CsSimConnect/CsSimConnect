<Window x:Class="CsSimConnectUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsSimConnectUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="bConnect" Content="Connect" HorizontalAlignment="Left" Margin="228,180,0,0" VerticalAlignment="Top" Click="DoConnect"/>
        <Button x:Name="bDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="221,229,0,0" VerticalAlignment="Top" IsEnabled="False" Click="DoDisconnect"/>
        <Label x:Name="lStatus" Content="Status:" HorizontalAlignment="Left" Margin="221,303,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lStatusValue" Content="Not connected." HorizontalAlignment="Left" Margin="281,303,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
